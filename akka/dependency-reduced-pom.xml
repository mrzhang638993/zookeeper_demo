          <groupId>org.apache.flume</groupId>
        </exclusion>
        <exclusion>
          <artifactId>flume-ng-auth</artifactId>
          <groupId>org.apache.flume</groupId>
        </exclusion>
        <exclusion>
          <artifactId>mina-core</artifactId>
